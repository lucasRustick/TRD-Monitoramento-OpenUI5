<mvc:View controllerName="bti_framework.pages._base.visualizarRecuperacao.config"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <f:DynamicPage id="page">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Recuperações de senha"/>
                </f:heading>
                <f:actions>
                    <Button text="Rejeitar" press="changeStatus(false)" type="Reject" />
                    <Button text="Aprovar" press="changeStatus(true)" type="Accept" />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
    </f:DynamicPage>
</mvc:View>
